@model List<ConvertAddress>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_layout.cshtml";
}



<div class="cadr">
    <div class="container">
        <div class="row">

            <a class="btn btn-lg btn-success" asp-action="Create">جدید</a>


            <table class="table text-center table-bordered mt-4">
                <thead class="thead-light">
                    <tr>
                        <th>ردیف</th>
                        <th>گوینده مبدا</th>
                        <th>گوینده صدا</th>
                        <th>خروجی تولید شده</th>
                        <th>وضعیت</th>
                    </tr>
                </thead>
                <tbody>
                    @{ var raw = 1;}
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="vertical-center">@(raw++)</td>
                            <td class="vertical-center">
                                <audio id="myAudio" controls>
                                    <source src="~/@item.Input1" type="audio/mpeg">
                                </audio>
                            </td>
                            <td class="vertical-center">
                                <audio id="myAudio" controls>
                                    <source src="~/@item.Input2" type="audio/mpeg">
                                </audio>
                            </td>
                            <td class="vertical-center">
                                <audio id="myAudio" controls>
                                    <source src="~/@item.OutPut" type="audio/mpeg">
                                </audio>
                            </td>
                            <td class="vertical-center">
                                @if (!item.IsDone)
                                {
                                    <i class="fa fa-spinner text-warning" aria-hidden="true"></i>
                                }
                                else
                                {
                                    <i class="fa fa-check text-success" aria-hidden="true"></i>
                                }
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>
</div>


